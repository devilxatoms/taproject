<div id="modalFormStatus" class="modal fade" tabindex="-1" role="dialog">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
				<h4 class="modal-title"><span v-if="status.id" >Modificar</span><span v-else>Nuevo</span> Estado</h4>
			</div>
			<form v-on:submit.prevent="saveStatus('modalFormStatus')" id="formBanks">
				<div class="modal-body">
					<input type="hidden" name="id" v-model="status.id">
					<div class="row">
						<div class="col-md-6">
							<div class="form-group">
								<label for="status_name">Nombre: </label>
								<input v-model="status.name" class="form-control" type="text" name="status_name"  required>
							</div>
						</div>
						<div class="col-md-6">
							<div class="form-group">
								<label for="status_description">Descripcion: </label>
								<textarea  maxlength="255" v-model="status.description" class="form-control" name="status_description"></textarea>
							</div>
						</div>
					</div>
					<div class="form-group">
						<vue-selectize-js
        					v-bind:selectize-settings="selectTypeStatus.settings"
        					v-bind:selectize-options="selectTypeStatus.options"
        					v-bind:selectize-enabled="selectTypeStatus.enabled"
        					v-model="status.type">
        				</vue-selectize-js>
					</div>
				</div>
				<div class="modal-footer">
					<button type="submit" data-action="submit" class="btn btn-success">Guardar</button>
					<button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
				</div>
			</form>
		</div>
	</div>
</div>