{% block content %}
    <section id="formStatus">
        <div class="box box-default">
            <div class="box-header">
                <h3 class="box-title">{% if Editar == 1 %} Editar estatus {% else %} Nuevo estatus {% endif %}</h3>
                <div class="box-tools pull-right">

                </div>
            </div>
            <div class="box-body">
                <div class="modal-body">
                    <div class="form-group">
                        <label for="">Nombre</label>
                        <input type="text" v-model="name">
                    </div>
                    <div class="form-group">
                        <label for="">Tipo</label>
                        <el-select v-model="selectfollowUpType">
                        <el-option
                          v-for="item in followUpType"
                          :key="item.id"
                          :label="item.type"
                          :value="item.id">
                        </el-option>
                      </el-select>
                    </div>
                </div>
            </div>
            <div class="box-footer">
                <button type="button" class="btn btn-default" v-on:click="saveOrEditActivity">Guardar</button>
            </div>
        </div>
    </section>
{% endblock %} {% block loadScripts %}
    <script id="scriptContainer" type="text/javascript">
    uiVars['FollowUpStatus'] = {{ FollowUpStatus|json_encode|raw }};
    var editar =uiVars['Editar'] = {{ Editar|json_encode|raw }};
    var title;
        if(editar == 1){ title = 'Editar estatus' }else{ title ='Nuevo estatus'}
        init.lenght = 0;
        init = [{
            title: title,
            file: 'CrmJs/FollowUp/Status.js',
            functions: [{
                name: 'initFormStatus',
                args: [
                    uiVars['FollowUpStatus']
                ]
            }]
        }];
    </script>
{% endblock %}
