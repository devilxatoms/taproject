<section>
    <div class="header-buttons">
        <div class="btn-group main-buttons">
            <a role="button"
               class="btn btn-success"
               onclick="generatePDF()">
                   <span class="fa fa-file-pdf-o"></span>
                   Generar PDF
            </a>
        </div>
    </div>
    <div class="panel-content" id="balance-sheet">
        <div class="box box-primary">
            <div class="box-header">
                <h3 class="box-title">Balance general</h3>
            </div>
            <div class="box-body">
                <div class="row">
                    {% include 'Accounting/Reports/AccountOverview/Partials/period.twig' %}
                </div>
                <div class="row" id="report-container">
                    <div class="col-lg-12"
                         v-loading="loading"
                         :element-loading-text="loadingText">
                         {% include 'Accounting/Reports/BalanceSheet/Partials/table.twig' %}
                     </div>
                </div>
            </div>
        </div>
    </div>
        {% include 'Accounting/Reports/BalanceSheet/Partials/templates.twig' %}
</section>
<style>
tr {
    page-break-inside: avoid;
    page-break-after: auto;
}
#balance-sheet-container {
}
table {
    color: #333333;
    border-style: solid;
    border-width: 1px;
    border-color: #dfe6ec;
    border-collapse: collapse;
    color: black;
}
table th {
    font-weight: bold;
    border-width: 1px;
    padding: 8px;
    background-color: #eef1f6;
    vertical-align: middle;
}
tbody tr:nth-child(odd) {
    background-color: white;
}
tbody tr:hover {
    background-color: #eef1f6;
}
tbody tr {
    background-color: #fafafa;
    page-break-inside: avoid;
    page-break-after: auto;
}
table td {
    border-width: 1px;
    padding: 5px;
    border-style: solid;
    border-color: #dfe6ec;
    text-align: right;
    vertical-align: middle;
}
.account-description {
    width: 36%;
    text-indent: 1em;
    text-align: left;
}
.regular-column {
    width: 16%;
    text-align: center;
}
td.negative {
    color: #da766f;
}
td.account {
    text-indent: 1em;
    text-align: left;
}
td.account-header {
    font-weight: bold;
    text-indent: 3em;
    text-align: left;
}
td.account-classification {
    font-style: italic;
    text-indent: 3em;
    text-align: left;
}
td.heavy-underline {
    border-bottom: solid;
}
</style>
<script id="scriptContainer" type="text/javascript">
var company_name = {{ company_name|json_encode|raw }};
var exercices    = {{ exercices|json_encode|raw }};
var periods      = {{ periods|json_encode|raw }};

init.length = 0;
init = [ {
    title: 'Balance general',
    file: 'Accounting/Reports/balanceSheet.js',
    functions: [ {
        name: 'initBalanceSheet',
        args: [company_name, exercices, periods]
    } ]
},
{
    file: 'asdk/asd/asd.css'
} ]
</script>
