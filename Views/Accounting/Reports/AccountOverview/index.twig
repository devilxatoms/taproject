<section>
    <div id="overview-module">
        <div class="header-buttons">
            <div class="row">
            </div>
        </div>

        <div class="panel-content">
            <div class="box box-primary">
                <div class="box-header">
                    <h3 class="box-title">
                        Resumen de cuentas de mayor
                    </h3>
                </div>
                <div class="box-body">
                    <div class="row">
                        {% include 'Accounting/Reports/AccountOverview/Partials/period.twig' %}
                    </div>
                    <div class="row">
                        <div class="col-lg-12"
                             v-loading="loading"
                             :element-loading-text="loadingText">
                        {% include 'Accounting/Reports/AccountOverview/Partials/table.twig' %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</section>

<script id="scriptContainer" type="text/javascript">
var catalogs = {{ catalogs|json_encode|raw }};
var exercices = {{ exercices|json_encode|raw }};
var periods = {{ periods|json_encode|raw }};
init.length = 0;
init = [ {
    title: 'Reporte de cuentas mayores',
    file: 'Accounting/Reports/accountOverview.js',
    functions: [ {
        name: 'initAccountOverview',
        args: [catalogs, exercices, periods]
    } ]
} ];
</script>
