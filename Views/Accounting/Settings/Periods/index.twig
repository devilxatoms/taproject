<section>
    <div id="accounting-period-list">
        <div class="header-buttons">
            <div class="btn-group main-buttons">
                <a role="button"
                    class="btn"
                    @click="newPeriod()"
                    >
                    <i class="fa fa-plus " aria-hidden="true"></i>
                    Nuevo periodo
                </a>
            </div>
        </div>
        <!--Fin de los controles de la cabecera-->
        <div class="panel-content">
            <div class="box box-primary">
                <div class="box-header">
                    <h3 class="box-title">Ejercicio contable</h3>
                </div>
                <div class="box-body">
                    <div class="row">
                        <div class="col-xs-12 col-md-3">
                            <div class="form-group">
                                <label>
                                Seleccionar ejercicio
                                </label>
                                <el-select
                                    v-model="currentExercice"
                                    placeholder="Ejercicio contable"
                                    style="width: 100%"
                                    @change="ajaxAccountingPeriodSearch(filtersBackup)">
                                    <el-option
                                        label="Nuevo..."
                                        :value="0">
                                    </el-option>
                                    <el-option
                                        v-for="exercice in accountingExerciceList"
                                        :key="exercice.id"
                                        :label="exercice.name"
                                        :value="exercice.id">
                                    </el-option>
                                </el-select>
                            </div>
                        </div>
                        <div v-if="currentExercice == 0" class="col-xs-12 col-md-4">
                            <div class="form-group">
                                <label>
                                Fecha de inicio
                                </label>
                                <el-date-picker
                                    v-model="exerciceForm.starting_date"
                                    type="date"
                                    placeholder="Seleccione un día">
                                </el-date-picker>
                            </div>
                        </div>
                        <div v-if="currentExercice == 0" class="col-xs-6 col-md-3">
                            <div class="form-group">
                                <label>
                                Número de periodos
                                </label>
                                <input
                                    type="number"
                                    v-model="exerciceForm.size" />
                            </div>
                        </div>
                        <div v-if="currentExercice == 0"
                        class="col-xs-6 col-md-2 block h40">
                            <div class="content contentMiddle">
                                <a
                                role="button"
                                class="btn block bg-base"
                                @click="ajaxSaveExercice()"
                                >Guardar</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div
                    class="col-xs-12"
                    v-loading="loading"
                    :element-loading-text="loadingText">
                    {% include 'Accounting/Settings/Periods/Partials/table.twig' %}
                </div>
            </div>
        </div>
    </div>
</section>
<script id="scriptContainer" type="text/javascript">
    var exercices = {{ exercices|json_encode|raw }};
    init.length = 0;
    init = [{
    	title: 'Listado de periodos',
    	file: 'Accounting/Settings/accountingPeriodList.js',
    	functions: [{
    		name: 'initAccountingPeriodList',
    		args: [exercices]
    	}]
    }];
</script>
