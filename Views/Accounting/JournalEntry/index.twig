<section>
    <div id="tableJournalEntries">
        <div class="header-buttons">
            <div class="btn-group main-buttons">
                <a id="btnPermissions"
                    role="button"
                    class="btn btn-success"
                    data-action="openLateral"
                    data-route="contabilidad/polizas"
                    data-panelsize="sm"
                    @click="addPermission">
                    <i class="fa fa-plus " aria-hidden="true"></i> Agregar PÃ³liza
                    <a role="button" class="btn btn-default" v-on:click="checkFields()">Mostrar/Ocultar Columnas </a>
                </a>
            </div>
        </div>

        <div class="panel-content">
            <div class="row">
                <div class="col-md-12 ">
                    <div class="table-responsive">
                        {% include 'Accounting/JournalEntry/table.twig' %}
                    </div>
                </div>
            </div>
        </div>
        <!-- Modal taxes sale -->
        <div class="modal fade" id="modal-account-details" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"  data-backdrop="false">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title" id="myModalLabel">Detalle de Cuentas</h4>
                    </div>
                    <div class="modal-body">
                        <div class="table-responsive">
                            <table class="table table-bordered">
                                <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th>Cuenta</th>
                                        <th>Descripcion</th>
                                        <th>Debe</th>
                                        <th>Haber</th>
                                        <th>Referencia</th>
                                        <th>Notas</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr v-for="account in listAccounts">
                                        <td>${ account.account_code }</td>
                                        <td>${ account.account_description }</td>
                                        {# <td>${ tax.tax_type }</td> #}
                                        <td>${ parseFloat(account.debit).toFixed(2) }</td>
                                        <td>$${parseFloat(account.credit).toFixed(2)}</td>
                                        <td></td>
                                        <td>${ account.text }</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal" v-on:click="closeModalAccounts">Cerrar</button>
                        <button type="button" class="btn btn-primary">
                            <span class="glyphicon glyphicon-list-alt"></span> Ir a Poliza
                        </button>
                    </div>
                </div>
            </div>
        </div>
        <!-- Modal -->
        <div class="modal fade" id="modal-select-fields" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
            <div class="modal-dialog modal-sm" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title" id="myModalLabel">Selecciona los campos</h4>
                    </div>
                    <div class="modal-body">
                        <ul>
                            <li v-for="(column, index) in columns">
                                <input class="" type="checkbox"  v-model="column.visible">
                                <label class="checbox-label" v-bind:for="'column-visible' + index">${ column.title }</label>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<script id="scriptContainer" type="text/javascript">
    uiVars['title'] = '{{title}}';
    init.lenght = 0;
    init = [ {
        title: uiVars['title'],
        file: 'Accounting/JournalEntries/list.js',
        functions: [ {
            name: 'permissionList',
            args: []
        } ]
    } ];
</script>
