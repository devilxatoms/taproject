<section>
  <div  id="FormPayrollType">
    <div class="header-buttons">
      <div class="btn-group main-buttons">
        <button
            class="btn btn-success"
            @click="payrollTypeValidate">
            <span class="glyphicon glyphicon-ok"></span>
            Guardar
        </button>
        <button
            class="btn btn-danger"
            data-action="closeTab">
            <span class="glyphicon glyphicon-remove"></span>
            Cancelar
        </button>
      </div>
    </div>
    <div class="panel-content">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">Tipos de Nominas</h3>
        </div>
        <form v-on:submit.prevent="payrollTypeValidate('FormPayrollType')" id="">
          <div class="panel-body">
            <input type="hidden" name="id" v-model="payrollType.id">
            <div class="form-group">
              <label for="c_TipoNomina">Tipo de Nomina:</label>
              <input v-model="payrollType.c_TipoNomina" class="form-control" type="text" name="c_TipoNomina" @keypress="clearPayrollTypeValidatorError('c_TipoNomina')">
              <span v-if="payrollTypeValidatorErrors != null" class="cRed">
                ${ payrollTypeValidatorErrors.first('c_TipoNomina') }
              </span>
            </div>
            <div class="form-group">
              <label for="payrollType_description">Descripción:</label>
              <input v-model="payrollType.description" class="form-control" type="text" name="payrollType_description" @keypress="clearPayrollTypeValidatorError('Descripción')">
              <span v-if="payrollTypeValidatorErrors != null" class="cRed">
                ${ payrollTypeValidatorErrors.first('Descripción') }
              </span>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</section>
<script id="scriptContainer" type="text/javascript">
  uiVars['title'] = '{{title}}';
  uiVars['view'] = {{view}};
  uiVars['data']   = {{data|json_encode|raw}};
  init.lenght = 0;
  init = [ {
    title: uiVars['title'],
    file: 'Payroll/PayrollTypes/form.js',
    functions: [ {
      name: 'initPayrollFormPayrollTypes',
      args: [ uiVars['data'], uiVars['view']]
    } ]
  } ];
</script>
