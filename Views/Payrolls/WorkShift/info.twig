<div class="col-xs-12 col-sm-12 col-md-2 col-lg-2">
    <div class="box-form">
        <h3 class="panel-title"></h3>
        <div class="form-group">
            <label>Nombre: </label>
            <input v-model="name">
        </div>
        <div class="form-group">
            <input type="radio" id="r1" value="r1" v-model="radio" checked>
            <label for="one">Fijo</label>

            <input type="radio" id="r2" value="r2" v-model="radio">
            <label for="one">Variable</label>

            <input type="radio" id="r3" value="r3" v-model="radio">
            <label for="one">Rotativo</label>
        </div>
        <div v-if="radio!='r2'" class="form-group">
            <input type="checkbox" v-model="retardoChe">
            <label>Retardo :</label>
            <el-time-picker
              v-model="retardo"
              :picker-options="{
                selectableRange: '00:00:00 - 00:30:00'
              }"
              placeholder="Arbitrary time" :disabled="!retardoChe">
            </el-time-picker>
        </div>
        <div  v-if="radio=='r3'"  class="form-group">
            <label>Semanas a Rotar :</label>
            <el-input-number v-model="rotacion" :min=2  :max=4></el-input-number>
        </div>
        <div v-if="radio=='r3'" class="form-group">
            <div class="row">
                <input type="radio" id="rot1" value="r1" v-model="radio2" checked>
                <label for="one">Semana 1</label>

                <input type="radio" id="rot2" value="r2" v-model="radio2">
                <label for="one">Semana 2</label>
            </div>
            <div class="row">
            <input v-if="rotacion>2" type="radio" id="rot3" value="r3" v-model="radio2">
            <label v-if="rotacion>2" for="one">Semana 3</label>

            <input v-if="rotacion>3" type="radio" id="rot4" value="r4" v-model="radio2">
            <label v-if="rotacion>3" for="one">Semana 4</label>
            </div>
        </div>
    </div>
</div>
