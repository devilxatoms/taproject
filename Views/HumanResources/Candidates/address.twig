<div class="row">
    <div class="col-md-12">
        <div class="form-group">
            <label>Busca Tu Dirección:</label>
            <vue-google-autocomplete
                id="map"
                type="regions"
                classname="input"
                placeholder=""
                v-on:placechanged="getAddressData"
            >
            </vue-google-autocomplete>
        </div>
        <div class="form-group">
            <label for="street">Calle:</label>
            <input id="street" name="street" v-model="candidate.address.street" @keypress="clearCandidateError('Calle')">
            <span v-if="candidateValidatorErrors != null"  class="error-validate" :class="candidateErrorsClass">${ candidateValidatorErrors.first('Calle') }</span>
        </div>
    </div>
</div>
