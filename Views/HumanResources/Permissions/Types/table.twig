{% block body %}
<section>
    <div id="permissions-types-module">
        <div class="header-buttons">
            <div class="btn-group main-buttons">
                <a id="btnNewPermissionsTypes"
                    role="button"
                    class="btn btn-success"
                    data-action="openLateral"
                    data-panelsize="xs"
                    data-route="recursosHumanos/permisos/tipos/nuevo">
                    <i class="fa fa-plus " aria-hidden="true"></i> Agregar Tipo de Permiso
                </a>
            </div>
        </div>
        <div class="panel-content">
            <vue-dynamic-table-rbc
                box-classes="box box-primary full-height"
                class-name="table table-bordered table-hover"
                :remote-method="ajaxPermissionsTypesSearch"
                :source-columns="permissionsTypesSourceColumns"
                :select-options="catalogs"
                :data-model="permissionsTypesList"
                :total-results="permissionsTypesResults"
                >
                <template slot="concept" scope="row">
                    ${row.object.concept}
                </template>
                <template slot="suggested_days" scope="row">
                    ${row.object.suggested_days}
                </template>
                <template slot="actions" scope="row">
                    <div class="ui-button bg-Light-Blue overflowInherit">
                        <div class="secondary">
                            <a
                                role="button"
                                class="has-tooltip btn align-right"
                                data-tooltip="Editar"
                                v-on:click="onEditClick(row.object.id)">
                                <span class="glyphicon glyphicon-edit"></span>
                            </a>
                            <a
                                class="has-tooltip btn align-right"
                                data-tooltip="Eliminar"
                                role="button"
                                v-on:click="onRemoveClick(row)">
                                <span class="glyphicon glyphicon-trash"></span>
                            </a>
                        </div>
                    </div>
                </template>
            </vue-dynamic-table-rbc>
        </div>
    </div>
</section>
{% endblock %}
{% block loadScripts %}
<script id="scriptContainer" type="text/javascript">
var catalogs = {{ catalogs|json_encode|raw }};
init.length = 0;
init = [ {
    title: 'Listado Tipo de Permiso',
    file:  'HumanResources/Permissions/Types/list.js',
    functions: [ {
        name: 'initPermissionsTypesListModule',
        args: [catalogs]
    } ]
} ];
</script>
{% endblock %}
