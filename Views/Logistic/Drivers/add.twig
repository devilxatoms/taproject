{% block content %}
    <section id="formNewDriver">
        <div class="header-buttons">
           <div class="btn-group main-buttons">
                <a
                    role="button"
                    class="btn btn  btn-success "
                    v-on:click="onSaveDriver">
                    <i class="glyphicon glyphicon-floppy-disk" aria-hidden="true"></i>
                    Guardar Chofer</a>
            </div>
        </div>
        <div class="panel-content">
            <form  id="registerDriver" enctype="multipart/form-data">
                <div class="row">
                    <div class="col-lg-12 col-md-5">
                        <div class="box box-default">
                            <div class="box-header">
                                <h3 class="box-title">DATOS PERSONALES</h3>
                            </div>
                            <div class="box-body">
                                <div class="row">
                                    <div class="col-md-2">
                                        <div class="logo-image">
                                            <img :src="imgLink" id="logoimg" name="logoimg" height="118px" width="118px" style="margin-left: 13px; border-radius:5px;">
                                        </div>
                                        <div class="form-group">
                                            <input id="pictureDriver"  name="pictureDriver" v-on:change="onFileSelected" type="file" accept="image/gif, image/jpeg, image/png" style="width:85%;"/>
                                        </div>
                                    </div>
                                    <div class="col-md-10">
                                        <div class="row">
                                            <div class="col-md-4">
                                                <div class="form-group req">
                                                    <label for="driverType">Tipo De Chofer</label>
                                                    <el-select v-model="driverType" v-on:change="onChangeDriverType($event)" name="is_employee" placeholder="Selecciona un tipo">
                                                        <el-option
                                                            v-for="item in driverTypeOptions"
                                                            :key="item.id"
                                                            :label="item.name"
                                                            :value="item.id">
                                                        </el-option>
                                                    </el-select>
                                                </div>
                                            </div>
                                            <div  v-if="flagShowEmployee" class="col-md-8">
                                                <div class="form-group req">
                                                    <label for="employeeId">Empleado</label>
                                                    <el-select v-on:change="onGetDataEmployee($event)" v-model="employeeId" filterable placeholder="Selecciona un empleado">
                                                        <el-option
                                                            v-for="employ in listEmployees"
                                                            :key="employ.id"
                                                            :label="employ.id + ' - ' + employ.name + ' ' + employ.father_surname + ' ' + employ.mother_surname"
                                                            :value="employ.id">
                                                        </el-option>
                                                    </el-select>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-4">
                                                <div class="form-group req">
                                                    <label for="name">Nombre</label>
                                                    <input type="text" class="form-control" v-model="name" name="name" :readonly="flagReadOnly">
                                                </div>
                                            </div>
                                            <div class="col-md-4">
                                                <div class="form-group req">
                                                    <label for="fatherSurname">Apellido Paterno</label>
                                                    <input type="text" class="form-control" v-model="fatherSurname" name="father_surname" :readonly="flagReadOnly">
                                                </div>
                                            </div>
                                            <div class="col-md-4">
                                                <div class="form-group req">
                                                    <label for="motherSurname">Apellido Materno</label>
                                                    <input type="text" class="form-control" v-model="motherSurname" name="mother_surname" :readonly="flagReadOnly">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    <label for="name">Género</label>
                                                    <el-select v-model="driverGender" name="gender" placeholder="Selecciona género" :disabled="flagReadOnly" :readonly="flagReadOnly">
                                                        <el-option
                                                            v-for="item in driverGenderOptions"
                                                            :key="item.id"
                                                            :label="item.name"
                                                            :value="item.id">
                                                        </el-option>
                                                    </el-select>
                                                </div>
                                            </div>
                                            <div class="col-md-4">
                                                <div class="form-group req">
                                                    <label for="rfc">RFC</label>
                                                    <input type="text" class="form-control" v-model="rfc" name="rfc" :readonly="flagReadOnly">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div v-if="flagShowLicenseForm" class="row">
                    <div class="col-lg-12 col-md-5">
                        <div class="box box-default">
                            <div class="box-header">
                                <h3 class="box-title">DATOS DE LICENCIA</h3>
                                <div class="box-tools pull-right">
                                    <button type="button" class="btn btn-box-tool" data-widget="collapse"
                                            data-toggle="tooltip"
                                            title="Minimizar">
                                        <i class="fa fa-minus"></i>
                                    </button>
                                </div>
                            </div>
                            <div class="box-body">
                                <div class="row">
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label for="numLicense">No. Licencia:</label>
                                            <input
                                                type="number"
                                                v-model="numLicense"
                                                name="license_num"
                                                autocomplete="off">
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label for="licenseType">Tipo De Licencia:</label>
                                            <el-select v-model="licenseType" name="license_type" placeholder="Selecciona un tipo">
                                                <el-option
                                                    v-for="item in dataLicenseType"
                                                    :key="item.id"
                                                    :label="item.type"
                                                    :value="item.id">
                                                    <span>${ item.type }</span>
                                                </el-option>
                                            </el-select>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label for="validityDate">Vence:</label>
                                            <el-date-picker
                                                name="validity_date"
                                                v-model="validityDate"
                                                type="date"
                                                placeholder="Fecha de vencimiento"
                                                :picker-options="pickerOptions">
                                            </el-date-picker>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <a
                                            role="button"
                                            class="btn btn btn-success pull-right"
                                            v-on:click="addLicense"
                                            data-panelsize="md">
                                            <i class="glyphicon glyphicon-plus-sign" aria-hidden="true"></i>
                                            Agregar Licencia</a>
                                    </div>
                                </div>
                                <div v-if="listLicenses.length > 0" class="row" style="margin-top: 10px;;">
                                    <div class="col-md-12">
                                        <vue-dynamic-table-rbc
                                            box-classes="box box-primary"
                                            class-name="table table-bordered table-hover"
                                            :remote-method="remoteSearch"
                                            :source-columns="columns"
                                            :data-model="datasource"
                                            hide-export 
                                            hide-import
                                            hide-filters 
                                            hide-results-info
                                            hide-main-bar 
                                            hide-filters-stats 
                                            template-file-name="ChoferesLicenses">
                                                
                                            {% include '/Logistic/Drivers/Licenses/Templates/slots.twig' %}  

                                        </vue-dynamic-table-rbc>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </section>
{% endblock %}
{% block loadScripts %}
    <script id="scriptContainer">
        init.length = 0;
        uiVars['driverId'] = '{{ driverId }}';
        init = [{
            title: 'Nuevo Chofer',
            file: 'Logistic/Drivers/newDriver.js',
            functions: [{
                name: 'initNewDriver',
                args: [ uiVars['driverId'] ]
            }]
        }];
    </script>
{% endblock %}