{% block body %}
    <section>
    	<div class="header-buttons">
    		<div class="btn-group main-buttons">
    			<a
    				role="button"
    				class="btn btn-success pull-left"
    				data-action="openLateral"
    				data-route="sistema/sucursales/agregar"
    				data-panelsize="md">
    				Nueva Sucursal</a>
    			<a
    				role="button"
    				class="btn btn-success pull-left"
    				data-action="openLateral"
    				data-route="warehouse/lateralNewWarehouse"
    				data-panelsize="md">
    				Nuevo Almacén</a>
    		</div>
    	</div>
    	<div class="panel-content">
    		<div id="tableSubsidiaries">
				<!-- Dynamic Table -->
				<vue-dynamic-table
					class-name="table table-bordered"
                    v-bind:class="{ fullHeight }"
					v-bind:filter-enabled="true"
					v-bind:expandable-row="true"
					v-bind:columns="columns"
					v-bind:pagination="true"
					v-bind:pagination-options="paginationOptions"
					v-on:go-to-page="goToPage"
					v-bind:data-model="datasource">
					<template slot="subsidiary-phones" scope="row">
						${row.object.phone}
						<a role="button" v-on:click="getPhones(row.object)">
							Teléfonos
						</a>
					</template>
					<template slot="subsidiary-emails" scope="row">
						${row.object.email}
						<a role="button" v-on:click="getEmails(row.object)">
							E-mails
						</a>
					</template>
					<template slot="subsidiary-warehouses" scope="row">
						${row.object.warehouseName}
						<a role="button" v-on:click="getWarehouses(row.object)">
							Almacenes
						</a>
					</template>
					<template slot="subsidiary-contacts" scope="row">
						<a role="button" v-on:click="getContacts(row.object)">
							Contactos
						</a>
					</template>
					<template slot="subsidiary-consignees" scope="row">
						<a role="button" v-on:click="getConsignees(row.object)">
							Consignatarios
						</a>
					</template>
					<template slot="subsidiary-buttons" scope="row">
						<div class="ui-button bg-Light-Blue overflowInherit">
                            <div class="secondary">
                                <a 
                                    role="button" 
                                    class="has-tooltip btn align-right"
                                    data-tooltip="Editar" 
                                    @click="editSubsidiary(row.index)">
                                    <span class="glyphicon glyphicon-edit"></span>
                                </a>
                                <a 
                                    role="button" 
                                    class="has-tooltip btn align-right"
                                    data-tooltip="Eliminar" 
                                    @click="askForDeleteSubsidiary(row.index)">
                                    <span class="glyphicon glyphicon-trash"></span>
                                </a>
                            </div>
                        </div>
					</template>
					<template slot="no-rows-found">
						<span>No se encontrarón resultados</span>
					</template>
				</vue-dynamic-table>
            </div>
			<!-- Dynamic Table -->
    	</div>
        <!-- Modal para eliminar sucursal-->
        <div class="modal fade bs-example-modal-sm" tabindex="-1" role="dialog" aria-labelledby="modal-delete-subsidiary" id="modal-delete-subsidiary">
            <div class="modal-dialog modal-sm" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title" id="myModalLabel">Confirmación</h4>
                    </div>
                    <div class="modal-body">
                        <template v-if="idSubsidiary >= 0">
                            ¿Desea eliminar la sucursal: <strong>${ subName }</strong>?
                        </template>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
                        <button type="button" class="btn btn-primary" @click="deleteSubsidiary">Aceptar</button>
                    </div>
                </div>
            </div>
        </div>
    	<!-- Modal de teléfonos -->
    	<div class="modal fade" id="modal-subsidiary-phones"
    		tabindex="-1" role="dialog"
    		aria-labelledby="myModalLabel"  data-backdrop="false">
    		<div class="modal-dialog" role="document">
    			<div class="modal-content">
    				<div class="modal-header">
    					<button type="button" class="close"
    						data-dismiss="modal" aria-label="Close">
    						<span aria-hidden="true">&times;</span>
    					</button>
    					<h4 class="modal-title" id="myModalLabel">Teléfonos</h4>
    				</div>
    				<div class="modal-body">
    					<vue-dynamic-table
    						class-name="table table-bordered"
                            v-bind:class="{ fullHeight }"
    						v-bind:filter-enabled="false"
    						v-bind:expandable-row="false"
    						v-bind:columns="columns"
    						v-bind:pagination="false"
    						v-bind:data-model="phones">
    						<template slot="main_phone" scope="row">
    							<input name="main_phone" type="radio">
    						</template>
    						<template slot="no-rows-found">
    							<span>No se encontrarón resultados</span>
    						</template>
    					</vue-dynamic-table>
    				</div>
    			</div>
    		</div>
    	</div>
    	<!-- Modal de correos -->
    	<div class="modal fade" id="modal-subsidiary-emails"
    		tabindex="-1" role="dialog"
    		aria-labelledby="myModalLabel"  data-backdrop="false">
    		<div class="modal-dialog" role="document">
    			<div class="modal-content">
    				<div class="modal-header">
    					<button type="button" class="close"
    						data-dismiss="modal" aria-label="Close">
    						<span aria-hidden="true">&times;</span>
    					</button>
    					<h4 class="modal-title" id="myModalLabel">E-mails</h4>
    				</div>
    				<div class="modal-body">
    					<vue-dynamic-table
    						class-name="table table-bordered"
    						v-bind:filter-enabled="false"
    						v-bind:expandable-row="false"
    						v-bind:columns="columns"
    						v-bind:pagination="false"
    						v-bind:data-model="emails">
    						<template slot="main_email" scope="row">
    							<input name="main_email" type="radio">
    						</template>
    						<template slot="no-rows-found">
    							<span>No se encontrarón resultados</span>
    						</template>
    					</vue-dynamic-table>
    					<!-- Dynamic Table -->
    				</div>
    			</div>
    		</div>
    	</div>
    	<!-- Modal de almacenes -->
    	<div class="modal fade" id="modal-subsidiary-warehouses"
    		tabindex="-1" role="dialog"
    		aria-labelledby="myModalLabel"  data-backdrop="false">
    		<div class="modal-dialog" role="document">
    			<div class="modal-content">
    				<div class="modal-header">
    					<button type="button" class="close"
    						data-dismiss="modal" aria-label="Close">
    						<span aria-hidden="true">&times;</span>
    					</button>
    					<h4 class="modal-title" id="myModalLabel">Almacenes</h4>
    				</div>
    				<div class="modal-body">
    					<vue-dynamic-table
    						class-name="table table-bordered"
    						v-bind:filter-enabled="false"
    						v-bind:expandable-row="false"
    						v-bind:columns="columns"
    						v-bind:pagination="false"
    						v-bind:data-model="warehouses">
    						<template slot="main_warehouse" scope="row">
    							<input name="main_warehouse" type="radio">
    						</template>
    						<template slot="no-rows-found">
    							<span>No se encontrarón resultados</span>
    						</template>
    					</vue-dynamic-table>
    					<!-- Dynamic Table -->
    				</div>
    			</div>
    		</div>
    	</div>
    	<!-- Modal con respuesta del servidor-->
    	<div class="modal fade bs-example-modal-sm" tabindex="-1" role="dialog" aria-labelledby="modal-subsidiary-message" id="modal-subsidiary-message">
    		<div class="modal-dialog modal-sm" role="document">
    			<div class="modal-content">
    				<div class="modal-header">
    					<button type="button" class="close" data-dismiss="modal" aria-label="Close">
    						<span aria-hidden="true">&times;</span>
    					</button>
    					<h4 class="modal-title" id="myModalLabel">
    						${ titulo }
    					</h4>
    				</div>
    				<div class="modal-body">
    					<p>${ mensaje }</p>
    				</div>
    				<div class="modal-footer">
    					<button type="button" class="btn btn-default" data-dismiss="modal">Ok</button>
    				</div>
    			</div>
    		</div>
    	</div>
    </section>
{% endblock %}
{% block loadScripts %}
    <script id="scriptContainer" type="text/javascript">
		init.length = 0;
        init = [ {
            title: 'Sucursales',
			file: 'System/Subsidiary/listSubsidiaries.js',
			functions: [ {
				name: 'initTableSubsidiaries',
				args: [ ]
			} ]
		} ];
	</script>
{% endblock %}
