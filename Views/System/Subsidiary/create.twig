<section>
    <div class="row" id="create-subsidiary-module">
        <div class="col-md-12 modalRemoveIds">
            <h1>{{ title|raw }}</h1>
            <hr/>
        </div>
        <div class="col-md-6">
            <label style="color: #002a80" for="">Datos generales</label>
            <div class="col-md-12">
                <div class="form-group">
                    <label for="name">Nombre: </label>
                    <input type="text"
                        class="form-control"
                        name="name"
                        id="name"
                        v-model="subsidiary.name">
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-group">
                    <label for="description">Descripción: </label>
                    <textarea class="form-control"
                        name="description"
                        id="description"
                        v-model="subsidiary.description"></textarea>
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-group">
                    <label for="code">Código: </label>
                    <input type="text"
                        class="form-control"
                        name="code"
                        id="code"
                        v-model="subsidiary.code">
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-group">
                    <label for="key">Clave: </label>
                    <input type="text"
                        class="form-control"
                        name="key"
                        id="key"
                        v-model="subsidiary.subsidiary_key">
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label for="phone">Teléfono: </label>
                    <vue-selectize-js
                        selectize-type="Tags"
                        :selectize-settings="selectizePhoneSettings"
                        v-model="subsidiary.phones">
                    </vue-selectize-js>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label for="email">E-mail: </label>
                    <vue-selectize-js
                        selectize-type="Tags"
                        :selectize-settings="selectizeEmailSettings"
                        v-model="subsidiary.emails">
                    </vue-selectize-js>
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-group">
                    <label for="manager_id">Responsable: </label>
                    <select  id="manager_id"  name="manager_id">
                        {% for user in users %}
                            <option value="{{ user.id }}">{{ user.name }}</option>
                        {% endfor %}
                    </select>
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-group">
                    <div class="form-group" name="warehouse" id="warehouse"></div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <label style="color: #002a80" for="">Dirección</label>
            <div class="col-md-12">
                <div class="form-group">
                    <vue-google-autocomplete
                        id="subsidiary"
                        type="regions"
                        classname="input"
                        placeholder="Buscar su Direccion"
                        v-on:placechanged="getAddressData"
                        country="mx">
                   </vue-google-autocomplete>
               </div>
                <div class="form-group">
                    <label for="street">Calle</label>
                    <input type="text"
                        name="street"
                        class="form-control"
                        id="street"
                        v-model="subsidiary.address.street">
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label for="external_number">No. Ext.</label>
                    <input type="text"
                        name="external_number"
                        class="form-control"
                        id="external_number"
                        v-model="subsidiary.address.external_number">
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label for="internal_number">No. Int.</label>
                    <input type="text"
                        name="internal_number"
                        class="form-control"
                        id="internal_number"
                        v-model="subsidiary.address.internal_number">
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-group">
                    <label for="suburb">Colonia</label>
                    <input type="text"
                        name="suburb"
                        class="form-control"
                        id="suburb"
                        v-model="subsidiary.address.suburb">
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-group">
                    <label for="postal_code">CP</label>
                    <input type="text"
                        name="postal_code"
                        class="form-control"
                        id="postal_code"
                        v-model="subsidiary.address.postal_code">
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-group">
                    <label for="municipality">Municipio</label>
                    <input type="text"
                        name="municipality"
                        class="form-control"
                        id="municipality"
                        v-model="subsidiary.address.municipality">
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-group">
                    <label for="town">Localidad</label>
                    <input type="text"
                        name="town"
                        class="form-control"
                        id="town"
                        v-model="subsidiary.address.town">
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-group">
                    <label for="state">Estado</label>
                    <input type="text"
                        name="state"
                        class="form-control"
                        id="state"
                        v-model="subsidiary.address.state">
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-group">
                    <label for="country">Pais</label>
                    <input type="text"
                        name="country"
                        class="form-control"
                        id="country"
                        v-model="subsidiary.address.country">
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <a style="margin-top: 10px; margin-bottom: 10px;"
                type="button"
                class="btn btn-success block"
                data-action="submit"
                @click="submitHandler">Guardar</a>
        </div>
        <div class="col-md-6">
            <a style="margin-top: 10px; margin-bottom: 10px;"
                type="button"
                class="btn btn-danger block"
                @click="closeLateral">Cancelar</a>
        </div>
    </div>

</section>
{% block loadScripts %}
    <script id="scriptContainer" type="text/javascript">
        uiVars['subsidiary'] = {{ subsidiary|json_encode|raw }};
        iniciarModuloAgregarSucursales( uiVars['subsidiary'] );
    </script>
{% endblock %}
