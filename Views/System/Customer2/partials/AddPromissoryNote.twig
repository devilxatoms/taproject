{% block content %}
<section>
	<div class="box box-default" id="savePromissoryNote">
        <div class="box-header">
            <h3 class="box-title">Pagare del Cliente</h3>
            <div class="box-tools pull-right">

            </div>
        </div>
        <div class="box-body" >

                <H4>Datos del pagare</H4>

                <div class="form-group">
                    <label>Fecha de Inicio:</label>
                    <el-date-picker
                        v-model="dateStart"
                        type="date"
                        placeholder="Seleccione la fecha de inicio"
                        format="dd-MM-yyyy"
                        >
                    </el-date-picker>
                </div>
                <div class="form-group">
                    <label>Cliente:</label>
                    <input v-model="customer"></input>
                </div>
                <div class="form-group">
                    <label>Dias:</label>
                    <input type="number" v-model="days" >
                    <a role="button" v-on:click="dateover">Calcular Dias</a>
                </div>
                <div class="form-group">
                    <label>Vencimiento:</label>
                    <el-date-picker
                        v-model="dateOver"
                        type="date"
                        format="dd-MM-yyyy"
                        >
                    </el-date-picker>
                </div>
                <div class="form-group">
                    <label>Monto: $</label>
                    <input type="number" v-model="mount">
                </div>

             <button class="btn btn-info" v-on:click="savePromissoryNote">Crear</button>
             <button class="btn btn-warning" v-on:click="Cancelar">Cancelar</button>


        </div>
        <vue-dynamic-table
           class-name="table table-bordered"
           v-bind:expandable-row="true"
           v-bind:filter-enabled="true"
           v-bind:columns="sourceColumns"
           v-bind:data-model="listTariffItems"
           v-on:go-to-page="goToPage"
           v-bind:pagination-options="pageOptions">
       </vue-dynamic-table>
    </div>
</section>
{% endblock %}
{% block loadScripts %}
    <script id="scriptContainer" type="text/javascript">
        init.lenght = 0;
         uiVars['id_PromisoryNote'] = {{ id_PromisoryNote | json_encode | raw }};
         uiVars['CustomerData'] = {{ CustomerData | json_encode | raw }};
        init = [{
        title: 'Pagare Del CLiente',
        file: 'System/Customer2/addCustomer.js',
        functions: [{
            name: 'savePromissoryNote',
            args: [
                uiVars['id_PromisoryNote'],
                uiVars['CustomerData']
            ]
            }]
        }];
    </script>
{% endblock %}
