{% block content %}
    <section>
        <div class="panel-content">
            <div id="customers-module" >
                <vue-dynamic-table-rbc
                    box-classes="box box-primary"
                    class-name="table table-bordered"
                    :show-visibility-options="true"
                    :show-filter-stats="true"
                    :filter-enabled="true"
                    v-on:go-to-page="goToPage"
                    v-on:action-link-click="actionLink"
                    v-bind:pagination-options="pageOptions"
                    v-bind:source-columns="sourceColumns"
                    v-bind:data-model="listCustomers">

                     <template slot="actions" scope="row">
                         <div class="ui-button bg-Light-Blue overflowInherit">
                            <div class="secondary">
                                <a
                                    class="btn align-right"
                                    v-on:click="addId(row.object)"
                                    data-toggle="modal"
                                    data-target="#AddValue">
                                    <span class="glyphicon glyphicon-plus-sign"></span>
                                </a>

                                <a
                                    class="btn align-right"
                                    role="button"
                                    v-on:click="showValues(row.object)"
                                    >
                                    <span class="glyphicon glyphicon-eye-open"></span>
                                </a>

                                <a
                                    class="has-tooltip btn align-right"
                                    role="button"
                                    data-tooltip="ver valores"
                                    v-on:click="editColumn(row.object)"
                                    >
                                    <span class="glyphicon glyphicon-edit"></span>
                                </a>



                                <a
                                class=" btn align-right"
                                role="button"
                                v-on:click="edit(row.object)">
                                        <span class="glyphicon glyphicon-eye-open"></span>
                                </a>

                                <a
                                class=" btn align-right"
                                role="button"
                                v-on:click="deleted(row.object)">
                                        <span class="glyphicon glyphicon-eye-open"></span>
                                <!-- revisar -->
                                <a
                                    class="has-tooltip btn align-right"
                                    role="button"
                                    data-tooltip="ver valores"
                                    v-on:click="deleteColumn(row.object)"
                                    >
                                    <span class="glyphicon glyphicon-trash"></span>

                                </a>

                            </div>
                         </div>
                    </template>

                    <template  slot="phones" scope="row">
                        <div class="expand">
                            ${ row.object.phones }
                        </div>
                    </template>

                    <template  slot="emails" scope="row">
                        <div class="expanded">
                            ${ row.object.emails }
                        </div>
                    </template>
                    <template slot="Establecimiento" scope="row">
                        <div class="expanded">
                            ${row.object.subsidiary_name}
                        </div>
                    </template>
                <template  slot="status" scope="row">

                    <div v-if=" row.object.status == 0" class="ui-button btn-success  overflowInherit">
                       <div  class="secondary">
                           <span v-on:click="activeCustomer(row.object)" class="btn align-right">Activo</span>
                       </div>
                    </div>

                    <div v-else  class="ui-button btn-danger  overflowInherit">
                       <div  class="secondary">
                           <span  v-on:click="disableCustomer(row.object)" class="btn align-right">inactivo</span>
                       </div>
                    </div>
                </template>

                    <template slot="promissory_note" scope="row">
                        <div class="ui-button btn btn-warning overflowInherit">
                            <div class="secondary">

                                <a
                                    class=" btn align-right"
                                    role="button"
                                    data-toggle="modal" data-target="#ModalPrommissory"
                                    v-on:click="createPromissoryNote(row.object)"
                                    >
                                    <span class="glyphicon glyphicon-plus-sign"></span>
                                    Crear
                                </a>
                            </div>
                        </div>
                    </template>
                </vue-dynamic-table-rbc>

                {# <vue-dynamic-table class-name="table table-bordered"
                    v-on:go-to-page="goToPage"
                    v-on:action-link-click="actionLink"
                    v-bind:pagination-options="customerTablePageOptions"
                    v-bind:columns="sourceColumns"
                    v-bind:data-model="listCustomers">
                </vue-dynamic-table> #}
            </div>

            {# <div id="customers-inactive-module" >
                <vue-dynamic-table class-name="table table-bordered"
                    v-on:go-to-page="goToPage"
                    v-on:action-link-click="actionLink"
                    v-on:action-button-click="actionButton"
                    v-bind:pagination-options="customerTablePageOptions"
                    v-bind:columns="sourceColumns"
                    v-bind:data-model="listCustomers">
                </vue-dynamic-table>
            </div> #}

        </div>

        <!--Modal for add value-->
<div class="modal fade" id="AddValue" role="dialog">
        <div class="modal-dialog">


            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">AÃ‘ADIR VALOR A CARACTERISTICA</h4>
                </div>
                <div class="modal-body">
                   <form method="POST" id="addValue">
                    <input type="hidden" id="id">
                    <div class="form-group">
                        <label for="">Valor</label>
                        <input type="text" class="form-control" maxlength="255" name="value" id="value" placeholder="Valor">
                    </div>

                    <div class="form-group">
                        <label>Seleccione la caracteristica</label>

                         <select id="additionalFeatures">

                         </select>

                    </div>

                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-success" data-dismiss="modal" id="buttonSave">Guardar</button>
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Cancelar</button>

                </div>
                </form>
            </div>

        </div>
    </div>


    </section>
{% endblock %}
