<div class="row">
    <div class="col-md-4">
        <div class="form-group">
            <label for="">Mercado:</label>
            <el-select
                v-model="marketException.market"
                filterable
                remote
                placeholder="Please enter a keyword"
                :remote-method="searchMarket"
                :loading="isLoading"
                @change="onSelectMarketExceptionMarket($event)">
                <el-option
                    v-for="market in listMarkets"
                    :key="market.id"
                    :label="market.name"
                    :value="market">
                </el-option>
            </el-select>
            <p class="text-danger" v-show="hasMarketExceptionError('market')">
                ${ marketExceptionErrors.market }
            </p>
        </div>
        <div class="form-group">
            <label>Tipo</label>
            <el-select
                v-model="marketException.valueType"
                @change="onSelectMarketExceptionValueType($event)">
                <el-option
                    v-for="valueType in listValueTypes"
                    :key="valueType.id"
                    :label="valueType.name"
                    :value="valueType">
                </el-option>
            </el-select>
            <p class="text-danger" v-show="hasMarketExceptionError('valueType')">
                ${ marketExceptionErrors.valueType }
            </p>
        </div>
        <div class="form-group">
            <label>Valor</label>
            <input type="text" v-model="marketException.value" @change="removeMarketExceptionError('value')">
            <p class="text-danger" v-show="hasMarketExceptionError('value')">
                ${ marketExceptionErrors.value }
            </p>
        </div>
        <div class="row">
            <div class="col-md-6">
                <button class="btn btn-primary block"
                @click="onSaveMarketExceptionButtonClick">Guardar</button>
            </div>
            <div class="col-md-6">
                <button class="btn btn-default block"
                @click="onCancelMarketExceptionButtonClick">Cancelar</button>
            </div>
        </div>
    </div>
    <div class="col-md-8">
        <el-table
            height="350"
            :data="marketExceptions"
            style="width: 100%">
            <el-table-column
                prop="market.code"
                label="Codigo"
                width="140">
            </el-table-column>
            <el-table-column
                prop="market.name"
                label="Mercado"
                min-width="250">
            </el-table-column>
            <el-table-column
                prop="valueType.name"
                label="Tipo de valor"
                width="150">
            </el-table-column>
            <el-table-column
                prop="value"
                label="Valor"
                width="100">
            </el-table-column>
            <el-table-column
                width="120">
                <template scope="scope">
                    <el-button type="button" size="small" @click="editMarketException(scope)">
                        <span class="fa fa-pencil-square-o"></span>
                    </el-button>
                    <el-button type="button" size="small" @click="askForDeleteMarketException(scope)">
                        <span class="fa fa-trash"></span>
                    </el-button>
                </template>
            </el-table-column>
        </el-table>
    </div>
</div>
