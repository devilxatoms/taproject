{% block content %}
    <section>
        <style>
            #containerAdditionalTag {
                height: 242px;
                overflow: auto;
            }

            label {
                white-space: nowrap !important;
            }

            .containerMultipleImgs {
                overflow: auto;
                max-height: 300px;
            }

            .margin10 {
                margin-top: 10px;
            }

            .borderMeny {
                border-bottom: 1px solid #dddddd;
            }

            .borderMeny button {
                margin-bottom: 6px;
            }
        </style>
        <div class="row" id="add-product-vue">
            
            <div class="col-lg-12 col-md-5" id="catalog-brands">
                <div class="box box-default">
                    <div class="box-header">
                        <h3 class="box-title">Datos de la Marca</h3>
                        <div class="box-tools pull-right">
                            <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="Minimizar">
                                <i class="fa fa-minus"></i>
                            </button>
                        </div>
                    </div>
                     
                    <div class="box-body" >
                        <div class="row">
                            <div class="col-md-12">
                            <form id="form-EoS" action="#" method="post">
                                <input type="hidden" name="idBrand" value="{{ marca.id }}">
                                <div class="form-group">
                                    <label for="">Código</label>
                                    <input type="text" class="form-control" name="brandCode"
                                           placeholder="Código"
                                           value="{{ marca.code }}">
                                </div>
                                <div class="form-group">
                                    <label for="">Marca</label>
                                    <input type="text" class="form-control" name="brandName"
                                            
                                            placeholder="Nombre de la marca"
                                            value="{{ marca.name }}">
                                </div>
                                <div class="form-group">
                                    <label for="">Descripción</label>
                                    <input type="text" class="form-control" name="brandDescription"
                                            
                                            placeholder="Descripción"
                                            value="{{ marca.description }}">
                                </div>
                                <div class="form-group">
                                    <button id="btnEnv"
                                     class="btn btn-success"
                                     v-on:click="createOrUpdate" 
                                    type="submit"><span class="fa fa-save"></span>Guardar</button>
                                </div>
                            </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
                
    </section>
    
{% endblock %}
{% block loadScripts %}
    <script type="text/javascript" src='Warehouse/Brands/BrandCatalog2.js'>
        
    </script>
    <script id="scriptContainer" type="text/javascript">
        init.length = 0;
        init = [{
            title: 'Añadir Marca',
            file: 'Warehouse/Brands/BrandCatalog.js',
            functions: [{
                name: 'Sal',
                args: []
            }]
        }];
    </script>


{% endblock %}
