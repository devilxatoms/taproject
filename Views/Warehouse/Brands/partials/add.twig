{% block content %}
    <section>
        <div class="row" id="brand-add-edit-module">
            <div class="col-sm-12">
                <div class="box box-default">
                    <div class="box-header">
                        <h3 class="box-title">Datos de la Marca</h3>
                        <div class="box-tools pull-right">

                            <idp-saving-status
                                :status="$store.getters['brand/createStatus']">
                            </idp-saving-status>


                            <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="Minimizar">
                                <i class="fa fa-minus"></i>
                            </button>
                        </div>
                    </div>

                    <div class="box-body" >
                        <div class="row">
                            <div class="col-md-12">
                                <input type="hidden" name="idBrand" value="{{ marca.id }}">

                                {# CÓDIGO #}
                                <div class="form-group req">
                                    <label>Código</label>
                                    <input
                                        v-model="brand.code"
                                        type="text"
                                        class="form-control"
                                        placeholder="Código">
                                    <div class="validation-text">
                                        <span v-if="$v.brand.code.$dirty && !$v.brand.code.required">
                                            El campo código es obligatorio
                                        </span>

                                        <span v-if="!$v.brand.code.minLength">
                                            El campo código debe tener ${$v.brand.code.$params.minLength.min} letras como mínimo.
                                        </span>
                                    </div>
                                </div>

                                {# MARCA #}
                                <div class="form-group req">
                                    <label for="">Marca</label>
                                    <input
                                        v-model="brand.name"
                                        type="text"
                                        class="form-control"
                                        placeholder="Nombre de la marca">
                                    <div class="validation-text">
                                        <span v-if="$v.brand.name.$dirty && !$v.brand.name.required">
                                            El campo nombre es obligatorio
                                        </span>

                                        <span v-if="!$v.brand.name.minLength">
                                            El campo nombre debe tener ${$v.brand.name.$params.minLength.min} letras como mínimo.
                                        </span>
                                    </div>
                                </div>

                                {# DESCRIPCIÓN #}
                                <div class="form-group">
                                    <label for="">Descripción</label>
                                    <input
                                        v-model="brand.description"
                                        type="text"
                                        class="form-control"
                                        placeholder="Descripción">
                                </div>


                                <div class="form-group" style="text-align: center">
                                    <button
                                        class="btn btn-default"
                                        @click="resetForm"
                                        >Limpiar Campos</button>

                                    </button>
                                    <button
                                        :disabled="$v.$invalid"
                                        class="btn btn-success"
                                        @click={{ brandId ? "update" : "create" }}>
                                        <span class="fa fa-save"></span>
                                        Guardar
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

    </section>

{% endblock %}
{% block loadScripts %}

    <script id="scriptContainer" type="text/javascript">
        init.length = 0;
        init = [{
            title: 'Añadir Marca',
            file: 'Warehouse/Brands/BrandAdd.js',
            functions: [{
                name: 'initBrandAddEditModule',
                args: []
            }]
        }];
    </script>


{% endblock %}
