{% block content %}
    <section>
        <style>
            #containerAdditionalTag {
                height: 242px;
                overflow: auto;
            }

            label {
                white-space: nowrap !important;
            }

            .containerMultipleImgs {
                overflow: auto;
                max-height: 300px;
            }

            .margin10 {
                margin-top: 10px;
            }

            .borderMeny {
                border-bottom: 1px solid #dddddd;
            }

            .borderMeny button {
                margin-bottom: 6px;
            }
        </style>
        <div class="row" id="add-brand-vue">

            <div class="col-md-12" id="catalog-tags">
                <div class="box box-default">
                    <div class="box-header">
                        <h3 class="box-title">Datos de la Etiqueta</h3>
                        <div class="box-tools pull-right">
                            <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="Minimizar">
                                <i class="fa fa-minus"></i>
                            </button>
                        </div>
                    </div>

                    <div class="box-body" >
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label>Código</label>
                                    <input
                                        v-model="tagCode"
                                        type="text"
                                        class="form-control"
                                        placeholder="Código">
                                </div>
                                <div class="form-group">
                                    <label for="">Etiqueta</label>
                                    <input type="text" class="form-control" name="tagName"
                                            placeholder="Nombre de la etiqueta"
                                            value="{{ etiqueta.name }}">
                                </div>
                                <div class="form-group">
                                    <label for="">Descripción</label>
                                    <input type="text" class="form-control" name="tagDescription"
                                            placeholder="Descripción"
                                            value="{{ etiqueta.description }}">
                                </div>
                                <div class="form-group">
                                    <button
                                        class="btn btn-success"
                                        @click="createOrUpdate"
                                    ><span class="fa fa-save"></span> Guardar</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

    </section>

{% endblock %}
{% block loadScripts %}

    <script id="scriptContainer" type="text/javascript">
        init.length = 0;
        init = [{
            title: 'Añadir Etiqueta',
            file: 'Warehouse/Tags/tagsCatalog.js',
            functions: [{
                name: 'iniciarModuloTagsCatalog',
                args: []
            }]
        }];
    </script>


{% endblock %}
