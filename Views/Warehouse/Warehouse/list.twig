<!--<h2>Almacenes activos</h2>-->
<div id="tableListWarehouses">
    <!-- Dynamic Table -->
    <vue-dynamic-table-rbc
        box-classes="box box-primary full-height"
        class-name="table table-bordered table-hover"

        :remote-method="remoteMethod"
        :total-results="totalResults"

        {# FAVORITOS #}
        :favorites="dynamicTableFavorites"
        @save-to-favorites="saveToFavorites"
        @loaded-favorite="loadedFavorite"

        :source-columns="sourceColumns"
        :data-model="listDataWarehouse"
        @expand-row="onExpandRow($event)">
        <template slot="expanded-row" scope="row">
            <div class="row">
                <div class="col-md-12">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Código</th>
                                <th>Ubicación</th>
                                <th>Descripción</th>
                                <th>Tipo</th>
                                <th>Peso Máximo</th>
                                <th>Largo</th>
                                <th>Alto</th>
                                <th>Ancho</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr v-for="item in row.object.details">
                                <td class="col-sm">${ item.code  }</td>
                                <td>${ item.ubication_name  }</td>
                                <td class="col-md">
                                    <div class="expand">
                                        ${ item.description }
                                    </div>
                                </td>
                                <td>${ item.ubication_type  }</td>
                                <td>${ item.weight_max } ${ item.weight_max_name }</td>
                                <td>${ item.deep } ${ item.deep_name }</td>
                                <td>${ item.height } ${ item.height_name }</td>
                                <td>${ item.width } ${ item.width_name }</td>
                                <td>
                                   <div class="ui-button bg-Light-Blue overflowInherit">
                                        <div class="secondary">
                                            <a
                                                class="has-tooltip btn align-right"
                                                role='button'
                                                @click="onEditUbicationClick( item )"
                                                data-tooltip="Editar">
                                                <span class="glyphicon glyphicon-edit"></span>
                                            </a>
                                            <a
                                                class="has-tooltip btn align-right"
                                                role='button'
                                                @click="onRemoveUbicationClick( item )"
                                                data-tooltip="Eliminar">
                                                <span class="glyphicon glyphicon-trash"></span>
                                            </a>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </template>



        <template slot="actions" scope="row">
            <div class="ui-button bg-Light-Blue overflowInherit">
                <div class="secondary">
                    <a
                        class="has-tooltip btn align-right"
                        role="button"
                        data-tooltip="Agregar ubicación"
                        v-on:click="onAddUbicationClick(row.object)">
                        <span class="glyphicon glyphicon-th-list"></span>
                    </a>
                    <a
                        class="has-tooltip btn align-right"
                        role="button"
                        data-tooltip="Editar almacén"
                        v-on:click="onEditClick(row.object)">
                        <span class="glyphicon glyphicon-edit"></span>
                    </a>
                    <a
                        class="has-tooltip btn align-right"
                        role="button"
                        data-tooltip="Eliminar almacén"
                        v-on:click="onRemoveClick(row.object)">
                        <span class="glyphicon glyphicon-trash"></span>
                    </a>
                    <a
                        class="has-tooltip btn align-right"
                        role="button"
                        data-tooltip="Añadir Valor"
                        data-toggle="modal" data-target="#AddValue"
                        v-on:click="addId(row.object)"
                        >
                         <span class="glyphicon glyphicon-plus-sign"></span>
                    </a>
                    <a
                        class="has-tooltip btn align-right"
                        role="button"
                        data-tooltip="ver valores"
                        v-on:click="showValues(row.object)"
                        >
                         <span class="glyphicon glyphicon-eye-open"></span>
                    </a>
                </div>
            </div>
        </template>
        <template slot="ubications" scope="row" >
            <a style="cursor:pointer;" class="has-tooltip" v-if="row.object.hasUbications" data-tooltip="Ver ubicaciones"
               v-on:click="triggerExpanded(row)">
                <span class="glyphicon glyphicon-eye-open"></span>
               Detalles
            </a>
        </template>
        <template slot="no-rows-found">
            <span>No se encontraron resultados</span>
        </template>
    </vue-dynamic-table-rbc>
    <!-- Dynamic Table -->
</div>

