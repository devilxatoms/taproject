<section>
    <div class="col-md-12" id="modal-module-edit">
        <label style="color: #002a80" for="">Datos generales</label>
        <div class="form-group">
            <label for="module-name">Nombre de Modulo: </label>
            <input type="text" class="form-control"  name="name" v-validate data-vv-rules="required"  id="module-name">
              <span class="cRed" v-show="errors.has('name')" >Campo modulo es Obligatorio</span>
            <input type="hidden" class="form-control"  name="id"  id="module-id">
        </div>
        <div class="form-group">
            <label for="module-description">Descripcion: </label>
            <textarea name="description" id="module-description"rows="8" cols="80"></textarea>
        </div>
        <br>
        <br>
        <button type="button" class="btn btn-primary" id="btnEditModule">Editar</button>
        <button type="button" class="btn btn-danger" id="cancelEditModule">Cancelar</button>
    </div>
</section>
