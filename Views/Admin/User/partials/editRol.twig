<section>
    <div class="col-md-12" id="modal-rol-edit">
        <label style="color: #002a80" for="">Datos generales</label>
        <div class="form-group">
            <label for="username">Nombre de Rol: </label>
            <input type="text" class="form-control"  name="name" v-validate data-vv-rules="required"  id="rol-name">
            <span class="cRed" v-show="errors.has('name')" >Campo rol es Obligatorio</span>
            <input type="hidden" class="form-control"  name="id"  id="rol-id">
        </div>
        <div class="form-group">
            <label for="description">Descripcion: </label>
            <textarea name="description" id="rol-description"rows="8" cols="80"></textarea>
        </div>
        <br>
        <br>
        <button type="button" class="btn btn-primary" id="btnEditRol">Editar</button>
        <button type="button" class="btn btn-danger" id="cancelEditRol">Cancelar</button>
    </div>
</section>
